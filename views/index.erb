<html>
<head>
  <link rel="stylesheet" type="text/css" href="assets/css/bootstrap.min.css" >
  <link rel="stylesheet" type="text/css" href="assets/css/module.css">
  <link rel="stylesheet" type="text/css" href="assets/css/modules/button--generate-style-guide.css">
  <link rel="stylesheet" type="text/css" href="assets/css/modules/header.css">
  <link rel="stylesheet" type="text/css" href="assets/css/modules/documentation-menu.css">
  <link rel="stylesheet" type="text/css" href="assets/css/modules/challenges.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
  <script type="text/javascript" src= "assets/js/ace/ace.js"></script>
</head>
<body>
  <header class="header">
    <h1>Living Style Guide Editor</h1>
  </header>

  <div class="container-fluid">

     <div class="row without-padding">

      <div class="col-md-12 ">
        <div class="col-md-5 without-padding">
          <form id="formArea" method="post" action="/lsg" >
            <div class="col-md-12 without-padding">
              <div name="code_lsg" id="editor" class="code-area"></div>
            </div>

            <button type="submit" class="center-block button"> <span class= "text-button"> Generate LSG </span>
              <div class="logo">
                <div class="rombo-up"></div>
                <div class="rombo-right"></div>
                <div class="rombo-down"></div>
                <div class="rombo-left"></div>
              </div>
            </button>
          </form>
          <div class="container-button">

            <input type="checkbox" class="help-toggle" id="documentation-button"></input>
            <label class='help-documentation' for="documentation-button"><i class="fa fa-book"></i></label>
            <div class="documentation">
              <%= erb :documentation %>
            </div>

            <input type="checkbox" class="help-toggle" id="challenges-button"></input>
            <label class='help-challenges' for="challenges-button"><i class="fa fa-star"></i></label>
            <div class="documentation challenges_examples">
              <%= erb :challenges %>
            </div>

          </div>
        </div>

        <div id="iframe--container" class="col-md-7 without-padding"></div>
      </div>
    </div>
  </div>

  <script>
    var editor = ace.edit("editor");
    editor.setTheme("ace/theme/twilight");
    editor.getSession().setMode("ace/mode/markdown");
  </script>
  <script type="text/javascript" src="assets/js/styleguide.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="assets/js/bootstrap.min.js"></script>

</body>
</html>
